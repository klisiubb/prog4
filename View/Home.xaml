<UserControl x:Class="P4_MVVM.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:P4_MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1000">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label VerticalAlignment="Center"  HorizontalAlignment="Center" Style="{StaticResource bigLabel}">Hello,</Label>
        <TextBlock VerticalAlignment="Center"  HorizontalAlignment="Center" Margin="0 50 0 0">
            Use buttons on the left to navigate thru app.
        </TextBlock>
        <TextBlock VerticalAlignment="Center"  HorizontalAlignment="Center" Margin="0 100 0 0">
            Manage artist, albums and songs. You can also listen to songs.
        </TextBlock>

        <Label Style="{StaticResource smallLabel}" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content=" Author: Mateusz Kliś, 2022" Margin="0 0 25 50"/>

    </Grid>
</UserControl>
